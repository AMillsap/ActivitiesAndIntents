<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnEMICalculator"
        android:text="Picture Activity"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnEMICalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnPicture"
        app:layout_constraintBottom_toTopOf="@+id/btnGeneratePerson"
        android:text="EMI Calculator"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnGeneratePerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnEMICalculator"
        app:layout_constraintBottom_toTopOf="@+id/btnShowPerson"
        android:text="Generate Person"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btnShowPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnGeneratePerson"
        app:layout_constraintBottom_toTopOf="@+id/btnCalendar"
        android:text="Show Person"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btnCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnShowPerson"
        app:layout_constraintBottom_toTopOf="@+id/btnWebpage"
        android:text="Calendar"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/btnWebpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnCalendar"
        android:text="Webpage"
        android:onClick="onClick"/>



</androidx.constraintlayout.widget.ConstraintLayout>